<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <SeekBar
        android:id="@+id/vs_sb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:padding="0dp"
        android:progress="0"
        android:progressDrawable="@drawable/vs_progress_drawable"
        android:splitTrack="false"
        android:thumb="@drawable/vs_thumb"
        android:thumbOffset="-2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/vs_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="到达指定地点"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/vs_sb"
        app:layout_constraintLeft_toLeftOf="@id/vs_sb"
        app:layout_constraintRight_toRightOf="@id/vs_sb"
        app:layout_constraintTop_toTopOf="@id/vs_sb" />
</merge>